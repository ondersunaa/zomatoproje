@model ETicaret.ViewModels.MagazaIlceViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Colorlib">
    <meta name="description" content="#">
    <meta name="keywords" content="#">
    <!-- Favicons -->
    <link rel="shortcut icon" href="#">
    <!-- Page Title -->
    <title></title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,700,900" rel="stylesheet">
    <!-- Simple line Icon -->
    <link rel="stylesheet" href="~/modules/detay/css/simple-line-icons.css">
    <!-- Themify Icon -->
    <link rel="stylesheet" href="~/modules/detay/css/themify-icons.css">
    <!-- Hover Effects -->
    <link rel="stylesheet" href="~/modules/detay/css/set1.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/modules/detay/css/style.css">
</head>

<body>
    <div class="row d-flex justify-content-center">
        <div class="col-md-12">
            <form class="form-wrap mt-2" method="post">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <div class="input-group">
                        <select asp-for="SelectedID" asp-items="@{new SelectList(Model.IlList,"ID","Ilismi" )}" class="custom-select " id="inputGroupSelect04"></select>
                        <div class="input-group-append h-100 mr-2">
                            <input type="submit" asp-action="Filitre" asp-controller="Home" class="btn-group btn-outline-warning" />
                        </div>
                    </div>
                </div>
            </form>
            @*<form class="form-wrap mt-2">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <div class="input-group">
                            <select class="custom-select" id="inputGroupSelect04">
                                @await Component.InvokeAsync("Ilce")
                            </select>
                            <div class="input-group-append h-100 mr-2">
                                <button asp-controller="Home" asp-action="Filitre" class="btn btn-outline-danger" type="button">Ara</button>
                            </div>
                        </div>

                    </div>
                </form>*@
        </div>
    </div>
    <form class="filter-dropdown">
        <section class="mt-5">
            <div class="container mt-5">
                <div class="row">
                    <div class=" responsive-wrap">
                        <div class="row detail-filter-wrap">
                            <div class="col-md-4 featured-responsive">
                                <div class="detail-filter-text">
                                    <p>Kriterlere uygun @Model.Magazalar.Count.ToString() adet <span>işletme var</span></p>
                                </div>
                            </div>
                            <div class="col-md-8 featured-responsive">
                                <div class="detail-filter">
                                    <p>Filtre</p>


                                    <select asp-for="SelectedID" asp-items="@{new SelectList(Model.ilcelers,"ID","Ilismi" )}" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect1">
                                        <option selected>İlçe Seç</option>
                                    </select>


                                    <select asp-for="SelectedIDTur" asp-items="@{new SelectList(Model.Kategoriler,"ID","Tur" )}" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
                                        <option selected>İşletme Türü</option>
                                    </select>


                                    <div class="map-responsive-wrap">
                                        <a class="map-icon" href="#"><span class="icon-location-pin"></span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row detail-checkbox-wrap">
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">

                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" value="true" asp-for="Otopark" >
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Otopark</span>
                                </label>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" value="true" asp-for="Wifi">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Wireless Internet  </span>
                                </label>
                            </div>

                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">

                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" value="true" asp-for="AcikAlan">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Açık Alan  </span>
                                </label>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input"  value="true" asp-for="KKart">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Kredi Kartı ile ödeme</span>
                                </label>
                            </div>

                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">

                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input"  value="true" asp-for="Alkol">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Alkol Servisi</span>
                                </label>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input"  value="true" asp-for="Oyun">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Oyun</span>
                                </label>
                            </div>

                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">

                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" value="true" asp-for="MacYayini">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Maç Yayını</span>
                                </label>

                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">

                                <input type="submit" asp-action="MagazaFilitre" asp-controller="Home" class="btn-group btn-outline-danger w-50 text-lg-center h-100" value="          Uygula" />

                            </div>

                        </div>

                        <div class="row light-bg detail-options-wrap">
                            @foreach (var item in Model.Magazalar)
                            {
                                <div class="col-sm-6 col-lg-6 col-xl-4 featured-responsive">
                                    <div class="featured-place-wrap">
                                        <a asp-action="Detay" asp-controller="Home" asp-route-id="@item.MagazaId">
                                            <img width="330" height="430" src="~/images/@item.FotoGenel" class="img-fluid" alt="#">
                                            <span class="featured-rating-orange ">6.5</span>
                                            <div class="featured-title-box">
                                                <h6>@item.MagazaAdi</h6>
                                                <p>@item.MagazaTur </p> <span>• </span>
                                                <p>3 Reviews</p> <span> • </span>
                                                <ul>
                                                    <li>
                                                        <span class="icon-location-pin"></span>
                                                        <p>1301 Avenue, Brooklyn, NY 11230</p>
                                                    </li>
                                                    <li>
                                                        <span class="icon-screen-smartphone"></span>
                                                        <p>@item.MagazaTel</p>
                                                    </li>
                                                    <li>
                                                        <span class="icon-link"></span>
                                                        <p>@item.MagazaMail</p>
                                                    </li>

                                                </ul>
                                                <div class="bottom-icons">
                                                    <div class="closed-now">CLOSED NOW</div>
                                                    <span class="ti-heart"></span>
                                                    <span class="ti-bookmark"></span>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>


                            }

                        </div>


                    </div>

                </div>
            </div>
        </section>
    </form>
    <script src="~/modules/detay/js/jquery-3.2.1.min.js"></script>
    <script src="~/modules/detay/js/popper.min.js"></script>
    <script src="~/modules/detay/js/bootstrap.min.js"></script>


    <script>
        $(".map-icon").click(function () {
            $(".map-fix").toggle();
        });
    </script>
    <script>
        // Want to customize colors? go to snazzymaps.com
        function myMap() {
            var maplat = $('#map').data('lat');
            var maplon = $('#map').data('lon');
            var mapzoom = $('#map').data('zoom');
            // Styles a map in night mode.
            var map = new google.maps.Map(document.getElementById('map'), {
                center: {
                    lat: maplat,
                    lng: maplon
                },
                zoom: mapzoom,
                scrollwheel: false
            });
            var marker = new google.maps.Marker({
                position: {
                    lat: maplat,
                    lng: maplon
                },
                map: map,
                title: 'We are here!'
            });
        }
    </script>
    <!-- Map JS (Please change the API key below. Read documentation for more info) -->
    <script src="https://maps.googleapis.com/maps/api/js?callback=myMap&key=AIzaSyDMTUkJAmi1ahsx9uCGSgmcSmqDTBF9ygg"></script>
</body>

</html>

