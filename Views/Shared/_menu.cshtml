@model ETicaret.ViewModels.DetayViewModel
<!DOCTYPE html>
<!-- saved from url=(0040)https://kingstudio.ro/demos/mr/menu.html -->
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Minimal Restaurant Template">
    <meta name="keywords" content="responsive, retina ready, html5, css3, restaurant, food, bar, events">
    <meta name="author" content="KingStudio.ro">
    <!-- favicon -->
    <link rel="icon" href="https://kingstudio.ro/demos/mr/images/favicon.png">
    <!-- page title -->
    <title>MR - Minimal Restaurant Template</title>
    <!-- bootstrap css -->
    <link href="./MR - Minimal Restaurant Template_files/bootstrap.min.css" rel="stylesheet">
    <!-- css -->
    <link href="./MR - Minimal Restaurant Template_files/style.css" rel="stylesheet">
    <link href="./MR - Minimal Restaurant Template_files/animate.css" rel="stylesheet">
    <!-- fonts -->
    <link href="./MR - Minimal Restaurant Template_files/css" rel="stylesheet">
    <link href="./MR - Minimal Restaurant Template_files/css(1)" rel="stylesheet">
    <link href="./MR - Minimal Restaurant Template_files/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="./MR - Minimal Restaurant Template_files/FontAwesome.otf" rel="stylesheet" type="text/css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="overflow: visible;">

    <div class="space-80">&nbsp;</div>
    <section id="starter-menu">
        <div class="container">
            <div class="page-header text-center">
                <h2 class="text-primary">Menü</h2>
            </div><!-- / page-header -->
            <div class="row">

                <div class="col-md-4 menu-items wow fadeIn first" style="visibility: visible; animation-name: fadeIn;">
                    <h4 class="text-success">İçecekler</h4>

                    @foreach (var item in Model.Menu)
                    {
                        if (item.Tur == "İçecek")
                        {

                    <p> <h5 class="food-title">@item.Isim <span class=" food-price text-primary">₺ @item.Fiyat</span></h5></p>
                            <p class="food-text">@item.Aciklama</p>

                        }
                    }
                </div><!-- / menu-items -->

                <div class="col-md-4 menu-items wow fadeIn first" style="visibility: visible; animation-name: fadeIn;">
                    <h4 class="text-success">Yiyecek</h4>

                    @foreach (var item in Model.Menu)
                    {
                        if (item.Tur == "Yiyecek")
                        {

                    <p> <h5 class="food-title">@item.Isim <span class=" food-price text-primary">₺ @item.Fiyat</span></h5></p>
                            <p class="food-text">@item.Aciklama</p>

                        }
                    }
                </div><!-- / menu-items -->
                
                <div class="col-md-4 menu-items wow fadeIn first" style="visibility: visible; animation-name: fadeIn;">
                    <h4 class="text-success">Tatlılar</h4>

                    @foreach (var item in Model.Menu)
                    {
                        if (item.Tur == "Tatlı")
                        {

                    <p><h5 class="food-title">@item.Isim <span class=" food-price text-primary">₺ @item.Fiyat</span></h5></p>
                            <p class="food-text">@item.Aciklama</p>

                        }
                    }
                </div><!-- / menu-items -->


            </div><!-- / row -->
        </div><!-- / container -->
    </section>
    <!-- / starter-menu -->

    <script src="./MR - Minimal Restaurant Template_files/jquery.min.js.indir"></script>
    <script src="./MR - Minimal Restaurant Template_files/bootstrap.min.js.indir"></script>
    <!-- sticky nav -->
    <script src="./MR - Minimal Restaurant Template_files/jquery.easing.min.js.indir"></script>
    <script src="./MR - Minimal Restaurant Template_files/scrolling-nav-sticky.js.indir"></script>
    <!-- / sticky nav -->
    <!-- preloader -->
    <script src="./MR - Minimal Restaurant Template_files/preloader.js.indir"></script>
    <!-- / preloader -->
    <!-- wow -->
    <script src="./MR - Minimal Restaurant Template_files/wow.min.js.indir"></script>
    <script>new WOW().init();</script>
    <!-- / wow -->
    <!-- hide nav -->
    <script src="./MR - Minimal Restaurant Template_files/hide-nav.js.indir"></script>
    <!-- / hide nav -->
    <!-- / javascript -->

</body>
</html>
