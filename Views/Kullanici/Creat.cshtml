@model Kullanici
@{
    ViewData["Title"] = "Creat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-primary text-white p-1 m-1">
    <h1>Buralar</h1>
    <h2>Creat User</h2>
</div>
<form class="m-1 p-1" asp-action="Creat" asp-controller="Kullanici" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Isim">İsim</label>
        <input asp-for="Isim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Soyisim">Soyisim</label>
        <input asp-for="Soyisim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mail">Mail</label>
        <input asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resim">Resim</label>
        <input asp-for="Resim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tel">Telefon</label>
        <input asp-for="Tel" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Parola" >Parola</label>
        <input asp-for="Parola" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Oluştur" />
    <input asp-action="Index" asp-controller="Home" class="btn btn-danger" value="İptal" type="submit"/>
</form>
